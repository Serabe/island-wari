<project name="island-wari" default="run">

  <path id="classpath">
    <path location="src"/>
    <fileset dir="lib">
      <include name="*.jar"/>
    </fileset>
  </path>
  
  
  <target name="run" description="Run the wari server.">
    <java fork="true" classname="clojure.lang.Script">
      <classpath>
          <path refid="classpath"/>
          <path location="."/>
      </classpath>
      <arg value="src/wari.clj"/>
    </java>
  </target>

</project>
